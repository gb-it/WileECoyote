<core:View controllerName="view.Input" xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:h="http://www.w3.org/1999/xhtml">
	<List>
		<InputListItem label="Item Name"> 
			<Input id="ITEM"
				value="{/ITEM}"
				placeholder="Name"
				type="Text" />
		</InputListItem>
		<InputListItem label="Vendor">
			<Input id="vendor"
				value="ACME"
				placeholder="Vendor"
				type="Text" />
		</InputListItem>		
	</List>
</core:View>